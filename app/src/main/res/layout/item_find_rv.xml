<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fafafa"
        >



        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/item_find_icon_img"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_find_icon_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="llll"
            android:id="@+id/item_find_title_tv"
            />



        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_find_right_tv"
            android:textSize="10dp"
            android:text="kkk"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#afadad"
        android:id="@+id/item_find_bottom_tv"
        />


</LinearLayout>