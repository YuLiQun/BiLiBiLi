<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
    <qunzai.bilibili.utils.CircleImageView
        android:id="@+id/activity_concern_categories_circle_image_view"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:civ_border_color="#f200ff"
        app:civ_border_width="2dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <qunzai.bilibili.internet.LoadingImageView
            android:id="@+id/activity_concern_categories_loading_image_view_one"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <qunzai.bilibili.internet.LoadingImageView
            android:id="@+id/activity_concern_categories_loading_image_view_two"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <qunzai.bilibili.internet.LoadingImageView
            android:id="@+id/activity_concern_categories_loading_image_view_three"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <qunzai.bilibili.internet.LoadingImageView
            android:id="@+id/activity_concern_categories_loading_image_view_fore"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>
</LinearLayout>