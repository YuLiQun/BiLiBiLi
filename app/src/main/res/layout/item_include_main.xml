<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="#fc6f97"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/include_home_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_drawer_home"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:layout_toRightOf="@id/include_home_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/bili_default_avatar"
        android:id="@+id/include_icon_img"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/include_username_tv"
        android:text="未登录"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/include_icon_img"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/include_search_img"
        android:src="@mipmap/ic_toolbar_menu_search"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/include_search_img"
        android:src="@mipmap/ic_toolbar_menu_download"
        android:id="@+id/include_download_img"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_menu_top_game_center"
        android:id="@+id/include_game_img"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/include_download_img"

        />


</RelativeLayout>